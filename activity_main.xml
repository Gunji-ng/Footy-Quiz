<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pitch"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99EEEEEE"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Take our Footy Quiz!"
            android:textColor="#1A237E"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 1:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What Football Club is the most successful in the UEFA Champions League?"
                    android:textColor="#1A237E" />

                <EditText
                    android:id="@+id/ucl_success"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Real Madrid"
                    android:inputType="textCapWords|textNoSuggestions" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 2:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who's the highest goalscorer in the history of the UEFA Champions League?"
                    android:textColor="#1A237E" />

                <EditText
                    android:id="@+id/ucl_goalscorer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Firstname Surname"
                    android:inputType="textCapWords|textNoSuggestions" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 3:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who is the highest goalscorer in the history of the Spanish La Liga?"
                    android:textColor="#1A237E" />

                <EditText
                    android:id="@+id/la_liga_goalscorer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Firstname Surname"
                    android:inputType="textCapWords|textNoSuggestions" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 4:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many UEFA Champions League trophies has Liverpool Football Club won?"
                    android:textColor="#1A237E" />

                <EditText
                    android:id="@+id/liverpool_ucl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="(0 - 100)"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 5:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What year did Chelsea Football Club win their first UEFA Champions League trophy?"
                    android:textColor="#1A237E" />

                <EditText
                    android:id="@+id/chelsea_ucl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="(0000)"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 6:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Who scored the trophy-clinching goal for Germany at the 2014 World Cup?"
                    android:textColor="#1A237E" />

                <RadioGroup
                    android:id="@+id/germany_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_mario_gomez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mario Gomez" />

                    <RadioButton
                        android:id="@+id/rb_thomas_muller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thomas Muller" />

                    <RadioButton
                        android:id="@+id/rb_mario_gotze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mario Gotze" />

                    <RadioButton
                        android:id="@+id/rb_toni_kroos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toni Kroos" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 7:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What football club has the most English FA Cup trophies?"
                    android:textColor="#1A237E" />

                <RadioGroup
                    android:id="@+id/fa_cup_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_mufc_fa_cup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manchester United F.C." />

                    <RadioButton
                        android:id="@+id/rb_arsenal_fa_cup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arsenal F.C." />

                    <RadioButton
                        android:id="@+id/rb_everton_fa_cup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Everton F.C." />

                    <RadioButton
                        android:id="@+id/rb_supa_strikers_fa_cup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Supa Strikers" />
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 8:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Which of these teams haven't won the UEFA Champions League?"
                    android:textColor="#1A237E" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_chelsea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chelsea F.C." />

                    <CheckBox
                        android:id="@+id/cb_spurs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tottenham Hotspur F.C." />

                    <CheckBox
                        android:id="@+id/cb_mufc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manchester United F.C." />

                    <CheckBox
                        android:id="@+id/cb_barcelona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F.C. Barcelona" />

                    <CheckBox
                        android:id="@+id/cb_mcfc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manchester City F.C." />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 9:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Which of these players are World Cup winners?"
                    android:textColor="#1A237E" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_ronaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cristiano Ronaldo" />

                    <CheckBox
                        android:id="@+id/cb_iniesta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andres Iniesta" />

                    <CheckBox
                        android:id="@+id/cb_henry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thierry Henry" />

                    <CheckBox
                        android:id="@+id/cb_messi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lionel Messi" />

                    <CheckBox
                        android:id="@+id/cb_maradona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diego Maradona" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/realistic_vector_soccer_ball_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question 10:"
                    android:textColor="#3F51B5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Which of these players were part of Arsenal F.C's famous 'Invicibles'?"
                    android:textColor="#1A237E" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cb_viera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patrick Viera" />

                    <CheckBox
                        android:id="@+id/cb_pires"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Robert Pires" />

                    <CheckBox
                        android:id="@+id/cb_lampard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frank Lampard" />

                    <CheckBox
                        android:id="@+id/cb_sanchez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alexis Sanchez" />

                    <CheckBox
                        android:id="@+id/cb_toure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kolo Toure" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Please review your answers" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="submit"
            android:text="Submit"
            android:textColor="#004D40" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>